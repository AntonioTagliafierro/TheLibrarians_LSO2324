<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:layout_marginTop="16dp"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/PerfettiPerTeTextView">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp">

                        <RelativeLayout
                            android:layout_width="158dp"
                            android:layout_height="match_parent"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/bookImageView1"
                                android:layout_width="129dp"
                                android:layout_height="89dp"
                                android:scaleType="centerCrop" />

                            <TextView
                                android:id="@+id/bookTitleTextView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginStart="3dp"
                                android:layout_marginLeft="14dp"
                                android:layout_marginBottom="10dp"
                                android:text="Book Title 1"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp">

                        <RelativeLayout
                            android:layout_width="158dp"
                            android:layout_height="match_parent"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/bookImageView2"
                                android:layout_width="129dp"
                                android:layout_height="89dp"
                                android:scaleType="centerCrop" />

                            <TextView
                                android:id="@+id/bookTitleTextView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginStart="3dp"
                                android:layout_marginLeft="14dp"
                                android:layout_marginBottom="10dp"
                                android:layout_toRightOf="@id/bookImageView2"
                                android:text="Book Title 2"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp">

                        <RelativeLayout
                            android:layout_width="158dp"
                            android:layout_height="match_parent"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/bookImageView3"
                                android:layout_width="129dp"
                                android:layout_height="89dp"
                                android:scaleType="centerCrop" />

                            <TextView
                                android:id="@+id/bookTitleTextView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginStart="3dp"
                                android:layout_marginLeft="14dp"
                                android:layout_marginBottom="10dp"
                                android:text="Book Title 3"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp">

                        <RelativeLayout
                            android:layout_width="158dp"
                            android:layout_height="match_parent"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/bookImageView4"
                                android:layout_width="129dp"
                                android:layout_height="89dp"
                                android:scaleType="centerCrop" />

                            <TextView
                                android:id="@+id/bookTitleTextView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginStart="3dp"
                                android:layout_marginLeft="14dp"
                                android:layout_marginBottom="10dp"
                                android:text="Book Title 4"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

            <Button
                android:id="@+id/vediAltriButtom"
                android:layout_width="126dp"
                android:layout_height="45dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="31dp"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:text="Vedi altri"
                android:textColor="#0000FF"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/PerfettiPerTeTextView"
                app:layout_constraintTop_toBottomOf="@+id/bookImageButton" />

            <ImageButton
                android:id="@+id/bookImageButton"
                android:layout_width="394dp"
                android:layout_height="215dp"
                android:layout_marginTop="60dp"
                android:src="@android:drawable/btn_star"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bagImageButton" />

            <ImageButton
                android:id="@+id/bagImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="28dp"
                android:src="@android:drawable/btn_star"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/PerfettiPerTeTextView"
                android:layout_width="105dp"
                android:layout_height="25dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="40dp"
                android:text="Perfetti per te "
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bookImageButton" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="13dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/buttonHome"
                android:layout_width="90dp"
                android:layout_height="44dp"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:src="@android:drawable/ic_menu_compass" />

            <TextView
                android:id="@+id/textViewHome"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:text="Home"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/buttonStore"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:src="@android:drawable/ic_menu_search" />

            <TextView
                android:id="@+id/textViewStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:text="Store"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/buttonProfile"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:src="@android:drawable/ic_menu_preferences" />

            <TextView
                android:id="@+id/textViewProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>